<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :artist_name %> <br>
  <%= f.text_field :artist_name %> <br>
  <%= f.label :genre_name %> <br>
  <%= f.text_field :genre_id, list: "genre_list" %> <br>
  <datalist id="genre_list">
    <% Genre.all.each do |genre|%>
      <option value="<%= genre.name %>">
    <% end %>
  </datalist>
  <%= f.label :title %> <br>
  <%= f.text_field :title %> <br>
  <br>
  <%= f.submit %>

  <% end %>

